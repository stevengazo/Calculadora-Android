<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="9"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="7"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="4"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="3"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDelete"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btnErase"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F44336"
        android:text="c"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="1"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="2"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnErase"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="0"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="5"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintStart_toEndOf="@+id/btn4" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="Del"
        android:textSize="22sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnErase" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="6"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn5" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="8"
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="="
        android:textSize="36sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="+"
        android:textSize="42sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRest"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="-"
        android:textSize="42sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSum"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="/"
        android:textSize="42sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRest"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMultp"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="*"
        android:textSize="42sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="332dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>